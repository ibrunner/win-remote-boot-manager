# Windows Remote Boot Manager Configuration
# Copy this file to .env and fill in your actual values

# Boot Entry UUIDs (find with: bcdedit /enum firmware)
UBUNTU_BOOT_UUID=your-ubuntu-boot-uuid-here
WINDOWS_BOOT_UUID=your-windows-boot-uuid-here

# Script Paths (optional - defaults to scripts/ folder)
# BOOT_SCRIPT_DIR=C:\path\to\scripts

# Web Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# Authentication
# Generate a secure token with: python -c "import secrets; print(secrets.token_urlsafe(32))"
AUTH_TOKEN=your-secure-token-here

# Optional: Allowed IPs (comma-separated, leave empty for all)
# ALLOWED_IPS=192.168.1.100,192.168.1.101
